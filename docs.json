{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "willow",
  "name": "Mr. Doge API",
  "colors": {
    "primary": "#F59E0B",
    "light": "#FCD34D",
    "dark": "#D97706"
  },
  "favicon": "/favicon.svg",
  "navigation": {
    "tabs": [
      {
        "tab": "Documentation",
        "groups": [
          {
            "group": "Getting Started",
            "pages": ["index", "quickstart", "authentication"]
          },
          {
            "group": "Credits System",
            "pages": ["credits/overview", "credits/pricing"]
          },
          {
            "group": "Core Concepts",
            "pages": [
              "concepts/data-model",
              "concepts/sports-coverage",
              "concepts/ai-explained"
            ]
          }
        ]
      },
      {
        "tab": "API Reference",
        "groups": [
          {
            "group": "Sports Endpoints",
            "pages": [
              "api-reference/sports/health",
              "api-reference/sports/regions",
              "api-reference/sports/competitions",
              "api-reference/sports/events",
              "api-reference/sports/live-events",
              "api-reference/sports/event-details",
              "api-reference/sports/live-odds",
              "api-reference/sports/trending-events"
            ]
          },
          {
            "group": "AI Endpoints",
            "pages": [
              "api-reference/ai/mr-doge-picks",
              "api-reference/ai/betting-recommendations"
            ]
          }
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Dashboard",
          "href": "https://mrdoge.co/dashboard",
          "icon": "chart-line"
        },
        {
          "anchor": "Get API Key",
          "href": "https://mrdoge.co/dashboard",
          "icon": "key"
        },
        {
          "anchor": "Community",
          "href": "https://www.reddit.com/r/mrdoge/",
          "icon": "reddit"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@mrdoge.co"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Get API Key",
      "href": "https://mrdoge.co/dashboard"
    }
  },
  "contextual": {
    "options": ["copy", "view", "chatgpt", "claude", "cursor"]
  },
  "footer": {
    "socials": {
      "x": "https://x.com/mrdogeapp",
      "instagram": "https://www.instagram.com/mrdoge.ai",
      "linkedin": "https://www.linkedin.com/company/mrdoge",
      "reddit": "https://www.reddit.com/r/mrdoge/",
      "github": "https://github.com/mrdogeco"
    }
  },
  "api": {
    "baseUrl": "https://api.mrdoge.co",
    "auth": {
      "method": "bearer"
    },
    "playground": {
      "mode": "simple"
    }
  },
  "search": {
    "prompt": "Search Mr. Doge API docs..."
  }
}
